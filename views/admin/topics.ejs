<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-12 text-center">
            <h1 class="display-4">Topics</h1>
        </div>
        <div class="col-md-5">
            <form id="add-topic-form">
                <div class="form-group">
                    <label for="title">Topic Title</label>
                    <input type="text" name="title" required id="title" class="form-control" placeholder="Topic title..."
                        aria-describedby="">
                </div>
                <div class="form-group" id="add-topic-form" >
                    <label for="description">Description</label>
                    <textarea name="description" required id="description" cols="30" rows="10" class="form-control"></textarea>
                </div>
                <input type="hidden" name="topicId">
                <div class="form-group">
                    <button id="addTopicbtn"  class="form-control btn btn-secondary">Add Topic</button>
                </div>
            </form>
        </div>
    
        <div class="col-md-7 p-md-5">
            <table class="table" id="topicsTable">
                <thead>
                    <th>Topic</th>
                    <th>Description</th>
                    <th>Action</th>
                </thead>
            </table>
        </div>
    </div>
</div>