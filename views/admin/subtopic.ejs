<div class="container-fluid ">
    <div class="row mt-5">
        <div class="col-md-5 p-3">
            <h3 class="display-4 text-center my-4">Add new Subtopic</h3>
            <form id="add-subtopic-form" autocomplete="off" class="form">
                <div class="form-group">
                    <label for="topicId">Select Topic ID</label>
                    <select class="form-control" name="topicId" id="topicIdDropDown" required>
                        <option value="" selected disabled>Choose a topic </option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" required class="form-control" placeholder="Subtopic title"
                        aria-describedby="">
                   
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" required name="description" id="description" rows="10" cols="5"></textarea>
                </div>
                <input type="hidden" name="subTopicId">
                <button type="submit" class="btn btn-info btn-block" id="saveSubTopic">Save</button>
            </form>
        </div>

        <div class="col-md-7 p-3">
            
                <h3 class="display-4 text-center my-4">List of Subtopics</h3>
         
            <div id="accordianId" class="accordion subtopic">
              
            </div>
        </div>
    </div>
</div>
          