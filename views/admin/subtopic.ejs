<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4">Sub Topics</h1>
        </div>
        <div class="col-md-4">
            <form id="add-subtopic-form" autocomplete="off">
                <div class="form-group">
                    <label for="topicId">Select Topic ID</label>
                    <select class="form-control" name="topicId" id="topicIdDropDown" required>
                        <option value="" selected disabled>Choose a topic </option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" required class="form-control" placeholder="Subtopic title"
                        aria-describedby="">
                   
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" required name="description" id="description" rows="10" cols="5"></textarea>
                </div>
                <button type="submit" class="btn btn-primary" id="saveTopic">Save SubTopic</button>
            </form>
        </div>
    </div>
</div>
          